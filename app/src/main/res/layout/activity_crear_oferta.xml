<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Crear_oferta">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/crear_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="Nombre"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_below="@+id/crear_nombre"
                android:id="@+id/crear_publicar"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round1"
                android:layout_marginLeft="30dp"
                android:textColor="#fff"
                android:text="Publicar oferta"
                android:layout_marginTop="50dp"/>

            <Button
                android:layout_below="@+id/crear_nombre"
                android:id="@+id/crear_buscar"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round1"
                android:layout_marginRight="30dp"
                android:textColor="#fff"
                android:text="Búsqueda Automática"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>