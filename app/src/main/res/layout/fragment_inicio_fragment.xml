<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio_fragment">


    <RelativeLayout
        android:id="@+id/header"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/inicio_imagen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="CalificaciÃ³n promedio: 5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="150dp"
            android:textSize="18sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/nuevos_postulantes"
        android:layout_below="@+id/header"
        android:layout_width="175dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:text="Nuevos Postulantes"
        android:background="@drawable/round1"
        android:textColor="#fff"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/nueva_oferta"
        android:layout_below="@+id/nuevos_postulantes"
        android:layout_width="175dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Nueva oferta de empleo"
        android:background="@drawable/round1"
        android:textColor="#fff"
        android:textSize="18sp"/>

</RelativeLayout>