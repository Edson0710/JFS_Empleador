<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <Button
        android:id="@+id/Login_boton_referencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/Login_tview_anuncio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="#000"
        android:text="EMPLEADOR"
        android:layout_below="@+id/Login_boton_referencia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-295dp"
        />

    <ImageView
        android:id="@+id/Login_iview_imagen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/Login_boton_referencia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-230dp"
        android:background="@mipmap/logo"/>

    <EditText
        android:id="@+id/Login_etxt_correo"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_iview_imagen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/ic_correo"
        android:drawablePadding="8dp"
        android:hint="Correo:" />

    <EditText
        android:id="@+id/Login_etxt_contrasena"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Login_etxt_correo"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:hint="Contraseña:"
        android:drawableStart="@drawable/ic_contrasena"
        android:drawablePadding="8dp"
        />

    <RadioButton
        android:id="@+id/Login_rboton_sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantener sesión "
        android:layout_below="@+id/Login_etxt_contrasena"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/Login_boton_iniciar"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login_etxt_contrasena"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:onClick="Iniciar"
        android:text="Iniciar sesión" />

    <Button
        android:id="@+id/Login_boton_registrar"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login_boton_iniciar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="Registrarse"
        android:text="Registrarse" />


</RelativeLayout>