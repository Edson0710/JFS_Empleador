<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro_3">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/Registro3_imagen_imagen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="#9e9e9e"
        />

    <TextView
        android:id="@+id/Registro3_tview_letrero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Registro3_imagen_imagen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Presione el recuadro para agregar una imagen"
        android:textSize="16sp"
        android:textColor="#000"
        />

    <Button
        android:id="@+id/Registro3_boton_regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="Regresar"
        android:text="regresar" />

    <Button
        android:id="@+id/Registro3_boton_terminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:onClick="Terminar"
        android:text="Terminar registro" />

</RelativeLayout>